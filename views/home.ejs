<link rel="stylesheet" href="/css/home.css">
	<!-- bootstrap link -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<div class="home-container">

    <h1 class="h1-style">CSV Reader</h1>
    <p class="p-style">Reads CSV file and display it's content in tabular form</p>
    <p class="form-desc">Let's Upload New File (Only .CSV)</p>

    <form action="/upload" method="post" enctype="multipart/form-data">
        <label for="file-upload" class="custom-file-upload">Upload CSV:</label>
        <input type="file" id="file-upload" name="csv" required>
        <button type="submit" class="submit-button"><i class="fas fa-upload"></i></button>
    </form>

    <div id="files-container">
        <% for(let i of files){%>

            <div class="uploaded-files">
                
                <div class="file-name"><i class="fas fa-file"></i><%= i.name %></a> </div>
                <div class="file-open-button"><a href="/view/<%=i._id%>"><i class="fa-regular fa-folder-open"></i></a></div>   
                <a href="/delete/<%= i._id %>"><i class="fas fa-trash"></i></a>
                
            </div>    

        <%}%>
    </div>
</div>